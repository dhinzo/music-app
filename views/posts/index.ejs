<%- include('../partials/header.ejs') %>
<%- include('../partials/userNav.ejs', {currentUser: currentUser}) %>  
<div class="d-flex justify-content-center title pt-5 pb-5"><h1>Muse Feed</h1>
</div>
    <div class="container show-container">
        <div class="row d-flex justify-content-center">
            <% for (let i = 0; i < posts.length; i++) { %>
                <div class="card index-card index-cards mb-2" style="width: 20rem;">
                    <a href="/posts/<%= posts[i].id %>"> 
                    <img class="card-img-top cover-photo" src="/random-photo/<%= posts[i].id %>" alt="artist-photo"></a> 
                    <div class="card-body">
                        <h5 class="card-title"><%= posts[i].artistName %></h5>
                    </div>
                    <div class="card-body">
                        <h6>Tags:</h6>
                        <p><%= posts[i].tags %> </p>
                    </div>
                </div>
           <% } %>
        </div>    
    </div>
<%- include('../partials/footer.ejs') %>