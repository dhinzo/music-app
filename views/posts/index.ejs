<%- include('../partials/header.ejs') %>
<div class="d-flex justify-content-center title"><h1>Muse Feed</h1>
</div>
    <div class="container">
        <div class="row">
            <% for (let i = 0; i < posts.length; i++) { %>
                <div class="card index-card " style="width: 20rem;">
                    <a href="/posts/<%= posts[i].id %>"> 
                    <img class="card-img-top cover-photo" src="<%= posts[i].postPhoto %>" alt="artist-photo"></a> 
                    <div class="card-body">
                        <h5 class="card-title"><%= posts[i].artistName %></h5>
                        <h6 class="card-subtitle">"<%= posts[i].compTitle %>"</h6>
                        <p class="card-text"><%= posts[i].compDescription %></p>
                        <h6>Listen:</h6>
                        <p><em>Play music once file is uploaded</em></p>
                    </div>
                    <div class="card-body">
                        <h6>Tags:</h6>
                        <p><%= posts[i].tags %></p>
                    </div>
                    <div class="card-body">
                        <h6>Likes</h6>
                        <p><%= posts[i].likes %></p>
                    </div>
                </div>
           <% } %>
        </div>    
    </div>
<%- include('../partials/footer.ejs') %>